# === Required: Gemini API Key (BYOK for Trio) ===
# Get yours at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=

# === Required: Trio Configuration ===
TRIO_BASE_URL=https://trio.machinefi.com
TRIO_MCP_URL=https://trio.machinefi.com/mcp/
TRIO_WEBHOOK_SECRET=

# === Server Configuration ===
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# === CORS ===
# Comma-separated origins allowed for CORS. Leave empty for same-origin only.
ALLOWED_ORIGINS=

# === Database ===
DATABASE_PATH=./data/verifyhuman.db

# === Evidence Redaction ===
# Redact faces/text from evidence frames before storage
REDACTION_ENABLED=true
REDACTION_FAIL_CLOSED=true

# === Task Defaults ===
DEFAULT_INTERVAL_SECONDS=15
DEFAULT_INPUT_MODE=frames
DEFAULT_PREFILTER=true
MAX_CONCURRENT_JOBS=10
JOB_RESTART_GAP_TARGET_MS=2000
DEFAULT_MAX_DURATION_SECONDS=3600

# === Retention ===
EVENT_RETENTION_HOURS=72
FRAME_RETENTION_MINUTES=60

# === Demo Mode ===
# When enabled, AI agents auto-post tasks from catalogs and repost on completion
DEMO_MODE=true
DEMO_REPOST_BASE_DELAY_MS=60000

# === Device Attestation (optional) ===
# Mock mode validates any token; set to true for real device verification
ATTESTATION_LIVE_MODE=false
PLAY_INTEGRITY_PACKAGE_NAME=
PLAY_INTEGRITY_DECRYPTION_KEY=

# === Solana Escrow (optional) ===
# When SOLANA_LIVE_MODE=false (default), escrow operations are mocked with
# realistic-looking signatures. Set to true + provide SOLANA_PRIVATE_KEY and
# SOLANA_PROGRAM_ID to use the deployed Anchor program.
#
# To deploy the program yourself:
#   1. Install toolchain: rustup, solana-cli, anchor-cli
#   2. Build: anchor build
#   3. Deploy: anchor deploy --provider.cluster devnet
#   4. Initialize: npx tsx scripts/init-program.ts
#   5. Set SOLANA_PROGRAM_ID to the deployed program ID
#
# For local testing with solana-test-validator:
#   SOLANA_RPC_URL=http://127.0.0.1:8899
#   SOLANA_CLUSTER=localnet
SOLANA_LIVE_MODE=false
SOLANA_PRIVATE_KEY=
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_PROGRAM_ID=DbGavFV6xRvS5FKav7Xwrock9TEkemrNZkvnm2XDookF
SOLANA_EXPLORER_URL=https://explorer.solana.com
SOLANA_CLUSTER=devnet
