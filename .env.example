# === Required: Gemini API Key (BYOK for Trio) ===
# Get yours at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=

# === Required: Trio Configuration ===
TRIO_BASE_URL=https://trio.machinefi.com
TRIO_MCP_URL=https://trio.machinefi.com/mcp/
TRIO_WEBHOOK_SECRET=

# === Required: OpenClaw Configuration ===
OPENCLAW_BASE_URL=
OPENCLAW_BEARER_TOKEN=

# === Optional: YouTube Data API v3 ===
# Only needed for live status checks; oEmbed used as free fallback
YOUTUBE_API_KEY=

# === Server Configuration ===
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# === CORS ===
# Comma-separated origins allowed for CORS. Leave empty for same-origin only.
ALLOWED_ORIGINS=

# === Database ===
DATABASE_PATH=./data/wtme.db

# === Privacy Redaction ===
# Set to "true" to enable face blurring (requires GPU or CPU fallback)
REDACTION_ENABLED=true
REDACTION_FAIL_CLOSED=true

# === Session Defaults ===
DEFAULT_INTERVAL_SECONDS=30
DEFAULT_INPUT_MODE=hybrid
DEFAULT_PREFILTER=true
MAX_CONCURRENT_JOBS=10
JOB_RESTART_GAP_TARGET_MS=2000

# === Retention ===
EVENT_RETENTION_HOURS=24
FRAME_RETENTION_MINUTES=15
