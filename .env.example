# === Required: Gemini API Key (BYOK for Trio) ===
# Get yours at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=

# === Required: Trio Configuration ===
TRIO_BASE_URL=https://trio.machinefi.com
TRIO_MCP_URL=https://trio.machinefi.com/mcp/
TRIO_WEBHOOK_SECRET=

# === Server Configuration ===
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# === CORS ===
# Comma-separated origins allowed for CORS. Leave empty for same-origin only.
ALLOWED_ORIGINS=

# === Database ===
DATABASE_PATH=./data/proofstream.db

# === Evidence Redaction ===
# Redact faces/text from evidence frames before storage
REDACTION_ENABLED=true
REDACTION_FAIL_CLOSED=true

# === Task Defaults ===
DEFAULT_INTERVAL_SECONDS=15
DEFAULT_INPUT_MODE=frames
DEFAULT_PREFILTER=true
MAX_CONCURRENT_JOBS=10
JOB_RESTART_GAP_TARGET_MS=2000
DEFAULT_MAX_DURATION_SECONDS=3600

# === Retention ===
EVENT_RETENTION_HOURS=72
FRAME_RETENTION_MINUTES=60
